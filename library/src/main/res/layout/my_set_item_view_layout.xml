<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:minHeight="54dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/left_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0"
        android:src="@android:mipmap/sym_def_app_icon"/>

    <TextView
        android:id="@+id/left_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="1.5dp"
        android:text="left_txt left_txt left_txt left_txt left_txt"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/right_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="0"
        android:ellipsize="end"
        android:maxLines="2"
        android:maxWidth="120dp"
        android:text="right_txt right_txt right_txt right_txt right_txt"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/right_image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="0"
        android:src="@drawable/icon_arrow_right"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:background="@drawable/icon_checkbox_selector"
        android:button="@null"
        android:visibility="gone"/>
</LinearLayout>
