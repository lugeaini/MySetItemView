<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <com.chenxulu.library.widget.MySetItemView
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_set_item_single_selector"
            app:left_image="@drawable/icon_set"
            app:left_txt="single"
            app:right_txt="content"/>

        <com.chenxulu.library.widget.MySetItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_set_item_top_selector"
            app:left_image="@drawable/icon_set"
            app:left_txt="top"
            app:right_txt="content"/>


        <com.chenxulu.library.widget.MySetItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_set_item_bottom_selector"
            app:left_image="@drawable/icon_set"
            app:left_txt="bottom bottom"
            app:right_txt="content content"/>

        <com.chenxulu.library.widget.MySetItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_set_item_top_selector"
            app:left_txt="top"
            app:right_txt="content"/>

        <com.chenxulu.library.widget.MySetItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_set_item_middle_selector"
            app:left_txt="middle"
            app:right_txt="content"/>

        <com.chenxulu.library.widget.MySetItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_set_item_bottom_selector"
            app:left_txt="bottom"
            app:right_txt="content"/>

        <com.chenxulu.library.widget.MySetItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/my_set_item_top_selector"
            app:checkbox_visible="true"
            app:left_image="@drawable/icon_set"
            app:left_txt="top"
            app:right_image_visible="false"/>

        <com.chenxulu.library.widget.MySetItemView
            android:id="@+id/item8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_set_item_bottom_selector"
            app:checkbox_visible="true"
            app:left_image="@drawable/icon_set"
            app:left_txt="bottom8"
            app:right_image_visible="false"/>

    </LinearLayout>
</ScrollView>

